{
  "name": "sam-ts-ddd-template",
  "description": "Template for AWS SAM (serverless Application). Builth with TypeScript.",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "watch": "tsc -w --preserveWatchOutput",
    "build": "rm -rf ./dist && tsc",
    "sam-build": "sam build",
    "dev-server": "npm run build && sam local start-api",
    "deploy": "npm run build && npm run sam-build && sam deploy",
    "test": "jest --clearCache && jest"
  },
  "dependencies": {
    "aws-sdk": "^2.1046.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.18.0",
    "@types/aws-lambda": "^8.10.77",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^18.8.3",
    "@types/uuid": "^8.3.0",
    "faker": "^5.5.3",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.3"
  }
}
